<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="center" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.121" fx:controller="sample.Controller">
    <TextArea fx:id="textArea" editable="false" VBox.vgrow="ALWAYS" />

    <HBox fx:id="bottomPanel">
        <TextField fx:id="textField" onAction="#showPage" promptText="Введите номер страницы..." HBox.hgrow="ALWAYS" />
        <Button fx:id="btn" onAction="#showPage" text="Send" />
    </HBox>
</VBox>
